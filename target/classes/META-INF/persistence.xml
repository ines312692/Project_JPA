	version="2.0">


	<persistence-unit name="exemple1"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- les entités -->
		<class>tn.ensit.info3.glid.projet_jpa.model.Maire</class>
		<class>tn.ensit.info3.glid.projet_jpa.model.Classe</class>
		<class>tn.ensit.info3.glid.projet_jpa.model.Commune</class>
		<class>tn.ensit.info3.glid.projet_jpa.model.Departement</class>

		<properties>
			<!-- Database connection settings -->
			<property name="jakarta.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/bd_glid_2025" />
			<property name="jakarta.persistence.jdbc.user"
				value="app_glid_2025" />
			<property name="jakarta.persistence.jdbc.password"
				value="app_glid_2025" />

			<!-- Automatically export the schema -->
			<property
				name="jakarta.persistence.schema-generation.database.action"
				value="update" />

			<!-- Echo all executed SQL to console -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.highlight_sql" value="true" />
		</properties>

	</persistence-unit>
